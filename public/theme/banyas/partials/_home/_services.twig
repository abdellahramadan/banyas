<!-- Start Services Area -->
{% setcontent services = 'services' %}
{% if services is not empty %}
<section class="services-area bg-image ptb-100">
    <div class="container">
        <div class="section-title">
            <span>
                <span class="icon">
                    <i class="flaticon-technical-support"></i>
                </span>

                <span>Services {{ config.get('general/sitename') }}</span>
            </span>
            <h2>{{ homepage.services_subtitle }}</h2>
        </div>

        <div class="row">
            {% for service in services %}
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="single-services-box">
                        <div class="icon">
                            <i class="flaticon-router"></i>
                        </div>

                        <h3>{{ service.title }}</h3>

                        <p>{{ service.content|excerpt(50) }}</p>

                        <a href="{{ service|link }}" class="read-more-btn">DÃ©couvrir... <i class="flaticon-arrow-pointing-to-right"></i></a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
{% else %}
<section class="services-area bg-image ptb-100">
    <div class="container">
        <div class="section-title">
            <h2>Pas de service disponible</h2>
        </div>
    </div>
</section>
{% endif %}
<!-- End Services Area -->
