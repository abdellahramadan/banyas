<!-- Start Main Banner Area -->
{% setcontent banner = 'banner' %}

{% if banner is not empty %}
<div class="main-banner">
    <div class="container">
        <div class="row align-items-center m-0">
            <div class="col-lg-6 p-0">
                <div class="main-banner-content">
                    <span class="sub-title"><i class="flaticon-wifi-signal"></i> {{ banner.sub_title }}</span>
                    <h1>{{ banner.title }}</h1>
                    <p>{{ banner.description }}</p>

                    <div class="price">
                        {#{{ banner.price }} FCFA<span>/mois</span>#}
                    </div>

                    <div class="btn-box">
                        <a href="{{ banner.link_url }}" class="btn btn-primary">{{ banner.link_text }}</a>

                    </div>
                </div>
            </div>

            <div class="col-lg-6 p-0">
                <div class="banner-image">
                    <img src="{{ banner.image }}" alt="image">
                </div>
            </div>
        </div>
    </div>

    <div class="shape-img1"><img src="assets/img/shape-image/1.png" alt="imgae"></div>
</div>
<!-- End Main Banner Area -->
{% endif %}
