{% extends 'partials/_master.twig' %}

{% block content %}
    <!-- Start Page Title Area -->
    <div class="page-title-area">
        <div class="container">
            <div class="page-title-content">
                <h2>Blog</h2>
                <ul>
                    <li><a href="{{ path('homepage') }}">Acceuil</a></li>
                    <li>Blog</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End Page Title Area -->

    <!-- Start Blog Area -->
    <section class="blog-area ptb-100">
        <div class="container">
            <div class="row">
                {% for article in blog %}
                    <div class="col-lg-4 col-md-6">
                        <div class="single-blog-post">
                            <a href="{{ article|link }}" class="post-image"><img src="{{ article.image }}" alt="{{ article.title }}"></a>

                            <div class="blog-post-content">
                                <ul>
                                    <li><i class="fas fa-user-tie"></i> <a href="#">{{ article.author }}</a></li>
                                    <li><i class="far fa-clock"></i> {{ article.createdAt|localdate(format='j F, Y', locale='fr') }}</li>
                                </ul>
                                <h3><a href="{{ article|link }}">{{ article.title }}</a></h3>
                                <p>{{ article.content|excerpt(50) }}</p>

                                <a href="{{ article|link }}" class="read-more-btn">Lire... <i class="fas fa-angle-double-right"></i></a>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                {#

                <div class="col-lg-12 col-md-12">
                    <div class="pagination-area">
                        <a href="#" class="prev page-numbers"><i class="fas fa-angle-double-left"></i></a>
                        <a href="#" class="page-numbers">1</a>
                        <span class="page-numbers current" aria-current="page">2</span>
                        <a href="#" class="page-numbers">3</a>
                        <a href="#" class="page-numbers">4</a>
                        <a href="#" class="next page-numbers"><i class="fas fa-angle-double-right"></i></a>
                    </div>
                </div>
                #}
            </div>
        </div>
    </section>
    <!-- End Blog Area -->
{% endblock %}
